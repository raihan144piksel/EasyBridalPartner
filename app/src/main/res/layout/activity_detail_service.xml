<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.easybridal_partner.DetailServiceActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/judului"
        app:layout_constraintBottom_toBottomOf="@id/judului"
        app:tint="@color/coklat"
        />

    <TextView
        android:id="@+id/judului"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/bordergambar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="26dp"
        app:layout_constraintDimensionRatio="16:9"
        app:cardCornerRadius="5dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/judului"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gambarjasa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/service_image"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/judulservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUNDLING FULL PACKAGE PRE+WEDDING"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="31dp"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toBottomOf="@id/bordergambar"
        app:layout_constraintStart_toStartOf="@id/bordergambar"
        />

    <TextView
        android:id="@+id/namavendor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java Bride - Wedding Planner"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@id/judulservice"
        app:layout_constraintTop_toBottomOf="@id/judulservice"
        app:layout_constraintBottom_toTopOf="@id/tulisanrating"
        />


    <TextView
        android:id="@+id/tulisanrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/abu"
        app:layout_constraintStart_toStartOf="@id/judulservice"
        app:layout_constraintTop_toBottomOf="@id/namavendor"
        android:layout_marginTop="13dp"/>

    <TextView
        android:id="@+id/tulisanincluded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Included"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/abu"
        android:layout_marginStart="51dp"
        app:layout_constraintStart_toEndOf="@id/tulisanrating"
        app:layout_constraintTop_toBottomOf="@id/namavendor"
        android:layout_marginTop="13dp"/>


    <ImageView
        android:id="@+id/gambarbintang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_star_24"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@id/tulisanrating"
        app:layout_constraintStart_toStartOf="@id/tulisanrating"
        />

    <TextView
        android:id="@+id/valuerating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.2"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="9.03dp"
        app:layout_constraintStart_toEndOf="@id/gambarbintang"
        app:layout_constraintTop_toTopOf="@id/gambarbintang"
        app:layout_constraintBottom_toBottomOf="@id/gambarbintang"
        />

    <TextView
        android:id="@+id/valueincluded"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Venue, Photography, Catering, Gown"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/tulisanincluded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/valuerating"
        />

    <TextView
        android:id="@+id/tulisandeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/tulisanrating"
        app:layout_constraintTop_toBottomOf="@id/valuerating"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tulisandeskripsi"
        app:layout_constraintBottom_toTopOf="@id/totalharga">

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loremipsumdolor"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="27dp"
            />

    </ScrollView>


    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/totalharga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp500.000.000"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="22dp"/>

