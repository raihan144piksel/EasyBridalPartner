<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/coklat"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="12dp"
            android:layout_height="17dp"
            android:src="@drawable/white_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/new_post_title"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Post"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="#37DBFF"
            android:textSize="16sp"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Selected Image Preview -->
    <ImageView
        android:id="@+id/selected_image_preview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/select_image_preview"
        android:layout_below="@id/header"/>

    <!-- Gallery Selector -->
    <LinearLayout
        android:id="@+id/gallery_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/selected_image_preview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/coklat"
            android:gravity="center_vertical">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recents"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:layout_marginEnd="16dp" />

            <Button
                android:layout_marginStart="80dp"
                android:id="@+id/select_multiple_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Multiple"
                android:backgroundTint="@color/white"
                android:textColor="@color/coklat"
                android:drawableLeft="@drawable/multiple_icon"
                android:drawablePadding="8dp"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/camera_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_camera"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>

        <GridView
            android:id="@+id/gallery_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="4dp"
            android:padding="4dp"
            android:layout_below="@id/gallery_selector" />
    </LinearLayout>

